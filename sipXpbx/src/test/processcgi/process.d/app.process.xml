<?xml version="1.0"?>
<watchdog-process>
  <process_definitions xmlns="http://www.sipfoundry.org/sipX/schema/xml/processdefinitions-00-00">
    <group name="group-name">
        <process name="process-name">
            <dependentdelay wait="0" />
            <stdout file="/dev/null" />
            <stderr file="/dev/null" />
            <stdin  file="" />
            <start control="true">
                <execute command="command"
                         parameters=""
                         defaultdir="logdir" />
            </start>
            <stop control="false" />
            <restart control="false" />
        </process>
    </group>
  </process_definitions>
  <watchdog xmlns="http://www.sipfoundry.org/sipX/schema/xml/watchdog-00-00">
   <monitor>
      <monitor-process name="KeepAlive" restart="enable" max_restarts="3" report="enable" max_reports="3">
         <failure_contact method="email">email@localhost</failure_contact>
      </monitor-process>
   </monitor>
  </watchdog>
</watchdog-process>
